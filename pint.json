{
    "preset": "psr12",
    "rules": {
        "single_trait_insert_per_statement": false,
        "no_extra_blank_lines": {
            "tokens": [
                "attribute",
                "break",
                "case",
                "continue",
                "curly_brace_block",
                "default",
                "extra",
                "parenthesis_brace_block",
                "return",
                "square_brace_block",
                "switch",
                "throw",
                "use",
                "use_trait"
            ]
        },
        "blank_line_before_statement": {
            "statements": [
                "break",
                "case",
                "continue",
                "declare",
                "default",
                "do",
                "exit",
                "for",
                "foreach",
                "goto",
                "if",
                "include",
                "include_once",
                "phpdoc",
                "require",
                "require_once",
                "return",
                "switch",
                "throw",
                "try",
                "while",
                "yield",
                "yield_from"
            ]
        },
        "class_attributes_separation": {
            "elements": {
                "const": "one",
                "method": "one",
                "property": "one",
                "trait_import": "none",
                "case": "none"
            }
        },
        "unary_operator_spaces": false,
        "not_operator_with_successor_space": false,
        "trailing_comma_in_multiline": false,
        "single_quote": false,
        "binary_operator_spaces": true
    }
}
