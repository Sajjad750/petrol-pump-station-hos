<IfModule mod_rewrite.c>
    RewriteEngine On

    # Serve existing files or directories as they are
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Redirect everything else to public folder
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
